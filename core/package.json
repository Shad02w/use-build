{
    "name": "use-build",
    "version": "0.1.4",
    "description": "A vite plugin run script at build time and import at runtime",
    "homepage": "https://github.com/Shad02w/use-build",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Shad02w/use-build.git"
    },
    "type": "module",
    "keywords": [
        "vite",
        "plugin",
        "rsbuild",
        "build",
        "use build"
    ],
    "files": [
        "dist",
        "README.md"
    ],
    "exports": {
        "./vite": {
            "import": "./dist/vite.js",
            "require": "./dist/vite.cjs"
        },
        "./rsbuild": {
            "import": "./dist/rsbuildv2/index.js",
            "require": "./dist/rsbuildv2/index.cjs"
        }
    },
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup",
        "test": "cd ./test/basic-react && pnpm build",
        "prepublish": "pnpm run build"
    },
    "dependencies": {
        "@swc/core": "1.7.24",
        "memfs": "4.11.1"
    },
    "devDependencies": {
        "@rsbuild/core": "1.0.19",
        "@rspack/core": "1.0.14",
        "@types/express": "4.17.21",
        "@types/node": "22.10.1",
        "tsup": "8.3.5",
        "vite": "5.4.11"
    },
    "peerDependencies": {
        "@rsbuild/core": ">=1.0.0",
        "vite": "^5.4.0"
    },
    "peerDependenciesMeta": {
        "vite": {
            "optional": true
        },
        "@rsbuild/core": {
            "optional": true
        }
    },
    "license": "MIT"
}
