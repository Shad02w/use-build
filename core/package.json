{
    "name": "use-build",
    "version": "0.3.2",
    "description": "A vite plugin run script at build time and import at runtime",
    "homepage": "https://github.com/Shad02w/use-build",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Shad02w/use-build.git"
    },
    "type": "module",
    "keywords": [
        "vite",
        "plugin",
        "rsbuild",
        "build",
        "use build"
    ],
    "files": [
        "dist",
        "README.md"
    ],
    "exports": {
        "./vite": {
            "import": "./dist/esm/vite.js",
            "require": "./dist/cjs/vite.cjs"
        },
        "./rsbuild": {
            "import": "./dist/esm/rsbuildv2/index.js",
            "require": "./dist/cjs/rsbuildv2/index.cjs"
        }
    },
    "scripts": {
        "dev": "rslib build --watch",
        "build": "rslib build",
        "test": "cd ../test/basic-react && pnpm build && cd ../vite-6-react && pnpm build && cd ../vite-7-react && pnpm build",
        "prepublish": "pnpm run build"
    },
    "dependencies": {
        "@swc/core": "1.13.5",
        "memfs": "4.38.2"
    },
    "devDependencies": {
        "@rsbuild/core": "1.5.3",
        "@rslib/core": "0.12.4",
        "@rspack/core": "1.5.2",
        "@types/node": "24.3.0",
        "vite": "7.1.4"
    },
    "peerDependencies": {
        "@rsbuild/core": "^1.0.0",
        "vite": ">=6.0.0 <8.0.0"
    },
    "peerDependenciesMeta": {
        "vite": {
            "optional": true
        },
        "@rsbuild/core": {
            "optional": true
        }
    },
    "license": "MIT"
}
