{
    "name": "vite-plugin-build-time",
    "type": "module",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "scripts": {
        "build": "tsup-node ./src/index.ts --dts --format esm,cjs --out-dir ./dist",
        "dev": "tsup-node ./src/index.ts --watch --dts --format esm,cjs --out-dir ./dist",
        "prepublish": "pnpm run build"
    },
    "dependencies": {
        "@swc/core": "^1.4.11"
    },
    "devDependencies": {
        "@types/node": "^20.12.2",
        "prettier": "^3.2.5",
        "tsup": "^8.0.2",
        "typescript": "^5.4.3",
        "vite": "^5.2.7"
    },
    "peerDependencies": {
        "vite": ">=5.1.0"
    }
}
